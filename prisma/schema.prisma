generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../database.db"
}

model Todo {
  id          Int     @id @default(autoincrement())
  title       String
  description String?
  completed   Boolean @default(false)

  @@index([title])
}

model Reminder {
  id            Int    @id @default(autoincrement())
  reminder_text String
  importance    String
}

model CalendarEvent {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  event_from  DateTime
  event_to    DateTime

  @@index([title])
}

model CallerLookup {
  id           Int      @id @default(autoincrement())
  phoneNumber  String
  lookupResult String   // JSON string of lookup result
  timestamp    DateTime @default(now())

  @@index([phoneNumber])
}

model CallRecord {
  id        Int      @id @default(autoincrement())
  to        String
  from      String
  callSid   String   @unique
  status    String
  timestamp DateTime @default(now())

  @@index([callSid])
}

model CallerDatabase {
  id           Int      @id @default(autoincrement())
  name         String
  phoneNumber  String   @unique
  licensePlate String?
  type         String?  @default("personal")
  spamLikelihood String? @default("low")
  location     String?  @default("Unknown")
  carrier      String?  @default("Unknown")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([phoneNumber])
  @@index([licensePlate])
}
